.index-airport
  %h1.text-center.title Аэропорты
  = link_to 'Добавить аэропорт', new_airport_path, class: 'new btn btn-primary'
  %table.table.table-bordered
    %thead
      %th №
      %th Наименование
      %th Город
      %th Действия
    %tbody
      - @airports.each do |airport|
        %tr
          %td= airport.id
          %td= airport.name
          %td= airport.city
          %td
            = link_to 'Редактировать', edit_airport_path(airport),
          class: 'btn btn-default'
            = link_to 'Удалить',  airport_path(airport), method:  :delete,
                                data: {confirm: 'Вы уверены?'}, class: 'btn btn-danger'